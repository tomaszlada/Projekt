{% extends 'base.html.twig' %}
{% block javascripts %}

    <script>
        onload = function () {
            var $ = function (id) {
                return document.getElementById(id);
            };
            $('proposal_form_loan_amount').oninput = function () {
                $('amount').innerHTML = this.value;
            };
            $('proposal_form_loan_amount').oninput();


            $('proposal_form_loan_duration').oninput = function () {
                $('duration').innerHTML = this.value;
            };
            $('proposal_form_loan_duration').oninput();

        };
    </script>
{% endblock %}

{% block title %}
    Lista Wniosk√≥w
{% endblock %}

{% block body %}


    {{ form_start(form) }}
    <table class="table table-bordered">
        <tr>
            <td>
                {{ form_label(form.client_id) }}
            </td>
            <td>
                {{ form_widget(form.client_id) }}
            </td>
        </tr>
        <tr>
            <td>
                {{ form_label(form.loan_amount) }}
            </td>
            <td>
                {{ form_widget(form.loan_amount) }} <span id="amount"></span>
            </td>
        </tr>
    </tr>
    <tr>
        <td>
            {{ form_label(form.loan_duration) }}
        </td>
        <td>
            {{ form_widget(form.loan_duration) }} <span id="duration"></span>
        </td>
    </tr>
    <tr>
        <td>
            {{ form_label(form.phone_number) }}
        </td>
        <td>
            {{ form_widget(form.phone_number) }}
        </td>
    </tr>
    <tr>
        <td>
            {{ form_label(form.email) }}
        </td>
        <td>
            {{ form_widget(form.email) }}
        </td>
    </tr>
    <tr>
        <td>
            {{ form_label(form.date_add) }}
        </td>
        <td>
            {{ form_widget(form.date_add) }}
        </td>
    </tr>
    <tr>
        <td>
            {{ form_label(form.state) }}
        </td>
        <td>
            {{ form_widget(form.state) }}
        </td>
    </tr>
</table>
<table class="table table-bordered">
    <tr>
        {{ form_end(form) }}
    </tr>
</table>


{% endblock %}